# OpenAI API Key
OPENAI_API_KEY=sk-...

# Optional: Custom API endpoint
# OPENAI_BASE_URL=https://api.openai.com/v1

# Database (port 5433 to avoid conflicts with other PostgreSQL instances)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/agents

# S3 Storage (MinIO for local dev)
S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=agents
AWS_REGION=us-east-1
S3_PRESIGNED_EXPIRY=900

# Security
SECRET_KEY=your-secret-key-change-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here
INTERNAL_SERVICE_TOKEN=your-internal-service-token

# Redis for distributed rate limiting (recommended for multi-instance deployments)
# REDIS_URL=redis://localhost:6380

# Stuck job recovery timeout (minutes, default: 30)
# STUCK_JOB_TIMEOUT_MINUTES=30

# LLM System Prompt (override default if needed)
# DEFAULT_SYSTEM_PROMPT=You are a data processing assistant...

# Model Validation (comma-separated, overrides default)
ALLOWED_MODELS=gpt-4o,gpt-4o-mini,gpt-4-turbo,anthropic/claude-3.5-sonnet,google/gemini-pro

# Usage Limits
ENFORCE_USAGE_LIMITS=true

# Content Moderation
ENABLE_CONTENT_MODERATION=true

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email (optional)
RESEND_API_KEY=

# Error Monitoring (Sentry)
SENTRY_DSN=
ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# CORS
CORS_ORIGINS=http://localhost:3000

# Debug
SQL_ECHO=false
